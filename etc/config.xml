<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <payment>
            <custompayment>
                <payment_action>authorize</payment_action><!-- You can use another method like capture  -->
                <model>MoneroIntegrations\Custompayment\Model\PaymentMethod</model>
                <active>1</active>
                <title>Monero Payment</title>
                <order_status>pending_payment</order_status><!-- set default order status-->
                <num_confirmations>5</num_confirmations>
            </custompayment>
        </payment>
    </default>
</config>
